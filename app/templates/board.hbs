{{log model}}

<div class="row">
    <div class="col s12">
        <h2>{{model.name}}</h2>
    </div>
</div>
<div class="row">
    <div class="col s4">
        {{#each model as |list|}}
            {{#if list.closed}}
            {{else}}
                <div class="col s12">
                    {{#md-card title=list.name
                    titleClass="orange-text"
                    id=board.id}}
                        {{#md-card-content}}

                        {{/md-card-content}}

                        {{#md-card-action}}
                            <a href="boards/{{list.idBoard}}/list/{{list.id}}">Октрыть</a>
                        {{/md-card-action}}

                    {{/md-card}}
                </div>
            {{/if}}
        {{/each}}
    </div>
    <div class="col s8">
        {{outlet}}
    </div>
</div>
