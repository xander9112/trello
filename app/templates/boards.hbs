<div class="row">
    <div class="col s12">
        <h2>Доски</h2>
    </div>
</div>
<div class="row">
    {{#each model as |board|}}
        {{#if board.closed}}
        {{else}}
            <div class="col m4 s12">
                {{#md-card title=board.name
                titleClass="orange-text"
                id=board.id}}
                    {{#md-card-content}}

                    {{/md-card-content}}

                    {{#md-card-action}}
                        <a href="boards/{{board.shortLink}}">Октрыть</a>
                    {{/md-card-action}}

                {{/md-card}}
            </div>
        {{/if}}
    {{/each}}
</div>
